<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.home.confirmation.ConfirmationVehicleActivity">

  <include
    android:id="@+id/toolbarsConfirm"
    layout="@layout/header"/>

  <ScrollView
    android:id="@+id/scroll"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/toolbarsConfirm"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="@dimen/default_padding_margin_huge_xxx">

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitleInformation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/ebonyClay"
        android:layout_marginTop="@dimen/default_padding_margin_x"
        android:layout_marginStart="@dimen/default_padding_margin_x"
        android:text="@string/home_title_bottom_sheet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

      <View
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_rounded_gray"
        android:layout_marginStart="@dimen/default_padding_margin_x"
        android:layout_marginEnd="@dimen/default_padding_margin_x"
        android:layout_marginTop="@dimen/default_padding_margin_x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitleInformation"
        app:layout_constraintBottom_toBottomOf="@id/textTitleLeasing"/>

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitleNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_margin_xxx"
        android:layout_marginTop="@dimen/default_padding_margin_xxx"
        android:text="@string/home_number_bottom_sheet"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitleInformation" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitleMark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_margin_xxx"
        android:layout_marginTop="@dimen/default_padding_margin"
        android:text="@string/home_from_bottom_sheet"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitleNumber" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitleType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_margin_xxx"
        android:layout_marginTop="@dimen/default_padding_margin"
        android:text="@string/home_type_bottom_sheet"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitleMark" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitleColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_margin_xxx"
        android:layout_marginTop="8dp"
        android:text="@string/home_color_bottom_sheet"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitleType" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitleYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_margin_xxx"
        android:layout_marginTop="8dp"
        android:text="@string/home_year_bottom_sheet"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitleColor" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitleLeasing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_margin_xxx"
        android:layout_marginTop="8dp"
        android:text="@string/home_leasing_bottom_sheet"
        android:textSize="14sp"
        android:paddingBottom="@dimen/default_padding_margin_x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitleYear" />

      <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.45"
        android:orientation="vertical"/>

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_margin_xxx"
        android:layout_marginEnd="@dimen/default_padding_margin_xxx"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/textTitleInformation" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textMark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_margin"
        android:layout_marginEnd="@dimen/default_padding_margin_xxx"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/textNumber" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_margin"
        android:layout_marginEnd="@dimen/default_padding_margin_xxx"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/textMark" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/default_padding_margin_xxx"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/textType" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/default_padding_margin_xxx"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/textColor" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textLeasing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/default_padding_margin_xxx"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/textYear" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitleAddUnit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/ebonyClay"
        android:layout_marginTop="@dimen/default_padding_margin_x"
        android:layout_marginStart="@dimen/default_padding_margin_x"
        android:text="@string/confirmation_add_photo_unit"
        app:layout_constraintTop_toBottomOf="@id/background"
        app:layout_constraintStart_toStartOf="parent"/>

      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageUnit1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="@dimen/default_padding_margin_x"
        android:layout_marginTop="@dimen/default_padding_margin_xh"
        app:srcCompat="@drawable/ic_place_holder_image"
        app:layout_constraintTop_toBottomOf="@id/textTitleAddUnit"
        app:layout_constraintStart_toStartOf="parent" />

      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageUnit2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="@dimen/default_padding_margin_x"
        android:layout_marginTop="@dimen/default_padding_margin_xh"
        app:srcCompat="@drawable/ic_place_holder_image"
        app:layout_constraintTop_toBottomOf="@id/textTitleAddUnit"
        app:layout_constraintStart_toEndOf="@id/imageUnit1" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitleAddId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/ebonyClay"
        android:layout_marginTop="@dimen/default_padding_margin_x"
        android:layout_marginStart="@dimen/default_padding_margin_x"
        android:text="@string/confirmation_add_photo_id"
        app:layout_constraintTop_toBottomOf="@id/imageUnit1"
        app:layout_constraintStart_toStartOf="parent"/>

      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageId"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="@dimen/default_padding_margin_x"
        android:layout_marginTop="@dimen/default_padding_margin_xh"
        app:srcCompat="@drawable/ic_place_holder_image"
        app:layout_constraintTop_toBottomOf="@id/textTitleAddId"
        app:layout_constraintStart_toStartOf="parent" />

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitleLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/ebonyClay"
        android:layout_marginTop="@dimen/default_padding_margin_x"
        android:layout_marginStart="@dimen/default_padding_margin_x"
        android:text="@string/confirmation_add_location"
        app:layout_constraintTop_toBottomOf="@id/imageId"
        app:layout_constraintStart_toStartOf="parent"/>

      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLocation"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_margin_h"
        android:layout_marginStart="@dimen/default_padding_margin_x"
        android:layout_marginEnd="@dimen/default_padding_margin_x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitleLocation"
        app:startIconDrawable="@drawable/ic_location"
        app:startIconTint="@color/dustyGray2">

        <androidx.appcompat.widget.AppCompatEditText
          android:id="@+id/editLocation"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/background_rounded_gray"
          android:hint="@string/confirmation_hint_add_location"
          android:inputType="text"
          android:focusable="false"
          android:focusableInTouchMode="false"
          android:textColor="@color/ebonyClay"
          android:textColorHint="@color/dustyGray2" />
      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_margin"
        android:layout_marginBottom="@dimen/default_padding_margin_x"
        android:layout_marginStart="@dimen/default_padding_margin_x"
        android:layout_marginEnd="@dimen/default_padding_margin_x"
        android:paddingBottom="@dimen/default_padding_margin_h"
        android:paddingTop="@dimen/default_padding_margin_h"
        android:backgroundTint="@color/kournikova"
        android:text="Buka Navigasi"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textInputLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

      <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/SecondaryButton"
        android:layout_marginTop="@dimen/default_padding_margin_x"
        android:layout_marginBottom="@dimen/default_padding_margin_x"
        android:layout_marginStart="@dimen/default_padding_margin_x"
        android:layout_marginEnd="@dimen/default_padding_margin_x"
        android:paddingBottom="@dimen/default_padding_margin_h"
        android:paddingTop="@dimen/default_padding_margin_h"
        app:strokeColor="@color/kournikova"
        android:text="@string/cancel_label"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/buttonNavigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/buttonSubmit"/>

      <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_margin_x"
        android:layout_marginBottom="@dimen/default_padding_margin_x"
        android:layout_marginStart="@dimen/default_padding_margin_x"
        android:layout_marginEnd="@dimen/default_padding_margin_x"
        android:paddingBottom="@dimen/default_padding_margin_h"
        android:paddingTop="@dimen/default_padding_margin_h"
        android:backgroundTint="@color/kournikova"
        android:text="@string/confirmation_button_next"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/buttonNavigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonCancel"
        app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>

  <include
    android:id="@+id/layoutLoading"
    android:visibility="gone"
    layout="@layout/general_simple_loading_dialog"/>

</androidx.constraintlayout.widget.ConstraintLayout>